<style>
  section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    height: 80vh;
  }

  .contenedor-datos {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    max-width: 1024px;
  }

  figure {
    width: 250px;
  }

  img {
    border-radius: 100%;
    max-width: 100%;
  }

  .contenedor-botones {
    display: flex;
    gap: 20px;
  }

  .contenedor-botones a {
    background-color: var(--color-bordes);
    padding: 10px 20px;
    border-radius: 10px;
  }

  .contenedor-botones a:nth-of-type(2) {
    background-color: var(--color-botones-relevantes);
  }

  p {
    color: var(--color-texto-sombreado);
  }

  @media only screen and (min-width: 1024px) {
    section {
      text-align: start;
      justify-content: start;
      padding-top: 50px;
    }

    .contenedor-datos {
      width: 100%;
      flex-direction: row;
      justify-content: space-between;
      gap: 20px;
    }

    figure {
      width: 150px;
    }

    .contenedor-datos--perfil{
      display: flex;
      align-items: center;
      gap: 20px;
    }
  }
