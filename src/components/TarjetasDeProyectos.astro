---
export interface Props{
    titulo: string,
    descripcion: string,
    imagen: string,
    slug: string
}

const {titulo, descripcion, imagen, slug} = Astro.props;
---

<div class="contenedor-tarjeta">
    <figure>
        <img src={imagen} alt="">
    </figure>
    <article>
        <h3>{titulo}</h3>
        <p>{descripcion}</p>
        <a href=`../proyectos/${slug}`>Ver proyecto</a>
    </article>
</div>

<style>
    .contenedor-tarjeta{
        background-color: var(--color-bordes);
        border-radius: 2px;
        border: 1px solid var(--color-bordes);
    }

    figure{
        width: 100%;
    }

    img{
        max-width: 100%;
        border-radius: 2px;
    }

    article{
        display: flex;
        flex-direction: column;
        text-align: left;
        gap: 10px;
        padding: 15px;
    }

    p{
        color: var(--color-texto-sombreado);
    }
</style>